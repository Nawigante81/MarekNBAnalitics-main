# NBA Analytics - Caddyfile Configuration
# This file configures Caddy as reverse proxy for the NBA Analytics application

# Replace with your actual domain
nbanalyzer.geracid.uk {
    # Automatic HTTPS with Let's Encrypt
    
    # Security headers
    header {
        # Security headers
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"  
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
        Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https: wss:;"
        
        # Remove server signature
        -Server
    }

    # Enable compression
    encode gzip zstd

    # Health check endpoint
    handle /health {
        respond "healthy" 200 {
            header Content-Type "text/plain"
        }
    }

    # Backend API proxy (directly to backend service in docker network)
    handle /api/* {
        reverse_proxy backend:8000 {
            # Health check for backend
            health_uri /health
            health_interval 30s
            health_timeout 10s
            
            # Load balancing (if multiple backend instances)
            # lb_policy round_robin
            
            # Headers
            header_up Host {host}
            header_up X-Real-IP {remote_host}
            header_up X-Forwarded-For {remote_host}
            header_up X-Forwarded-Proto {scheme}
        }
    }

    # Frontend (proxy to nginx inside frontend container)
    handle {
        reverse_proxy frontend:8080
    }

    # Logging
    log {
        output file /var/log/caddy/nba-analytics.log {
            roll_size 10MiB
            roll_keep 5
            roll_keep_for 720h
        }
        format console
    }

    # Rate limiting
    rate_limit {
        zone api {
            key {remote_host}
            events 100
            window 1m
        }
        zone login {
            key {remote_host}  
            events 5
            window 1m
        }
    }
}

# Alternative domain (www redirect)
www.nbanalyzer.geracid.uk {
    redir https://nbanalyzer.geracid.uk{uri} permanent
}