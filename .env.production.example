# =================================================================
# NBA Analytics - Production Environment Configuration
# =================================================================
# Production environment variables for Docker deployment

# =================================================================
# SUPABASE CONFIGURATION
# =================================================================

VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# =================================================================
# API KEYS
# =================================================================

VITE_ODDS_API_KEY=your_odds_api_key_here

# =================================================================
# PRODUCTION SETTINGS
# =================================================================

# Production API URL (modify for your domain)
VITE_API_BASE_URL=http://localhost:8000

# Environment
NODE_ENV=production

# Timezone
VITE_APP_TIMEZONE=America/Chicago
TZ=America/Chicago

# Python settings
PYTHONPATH=/app

# =================================================================
# OPTIONAL PRODUCTION SETTINGS
# =================================================================

# Refresh interval (production might be longer)
VITE_REFRESH_INTERVAL=60000

# Log level for production
LOG_LEVEL=INFO

# Disable debug features
VITE_DEBUG=false
VITE_DEV_MODE=false